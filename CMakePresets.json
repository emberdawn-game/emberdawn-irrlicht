{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 5,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release configuration",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Release"
        },
        "BUILD_EXAMPLES": {
          "type": "BOOL",
          "value": true
        }
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug configuration",
      "inherits": "release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Debug"
        }
      }
    },
    {
      "name": "ci-linux",
      "displayName": "Linux CI",
      "description": "Configuration used for CI on Linux",
      "inherits": "release",
      "cacheVariables": {
        "USE_OGLES2": {
          "type": "BOOL",
          "value": true
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "ci-linux",
      "configurePreset": "ci-linux"
    }
  ]
}